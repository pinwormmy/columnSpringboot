<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.demo.mapper.VideoMapper">
    <insert id="submitVideoPost">
        insert into VIDEO values(VIDEO_NUM_SEQ.nextval, #{title}, #{videoUrl}, sysdate)
    </insert>

    <select id="showVideoList" resultType="com.study.demo.video.VideoDTO">
        SELECT * FROM
            (SELECT rownum r, a.* FROM
                (select * from video
                    where <include refid="searchKeyword"></include>
                    order by video_num desc) a)
        WHERE r BETWEEN #{postBeginPoint} AND #{postEndPoint}
    </select>

    <sql id="searchKeyword">
        <if test="searchType == 'title'">title like '%'||#{keyword}||'%'</if>
    </sql>

    <delete id="deleteVideoPost">
        delete from video
        where video_num=#{videoNum}
    </delete>

    <select id="countTotalPost" resultType="int">
        select count(*) from video
        where <include refid="searchKeyword"></include>
    </select>

</mapper>