<style>
@font-face {
    font-family: "NanumSquareNeo";
    src: url("../fonts/NanumSquareNeo-Variable.ttf") format("truetype");
}

html {
    height: 100%;
}
body {
    position: relative;
    width: 100%;
    height: 100%;
    font-family: 'NanumSquareNeo', sans-serif;
    font-size: 16px;
    font-weight: 300;
}
h1, h2, h3, h4, h5, h6, p {
    font-family: 'NanumSquareNeo', sans-serif;
}
.navbar-wrapper {
    border-bottom: solid 2px Turquoise;
}
.this-header {
    width: 1600px;
    margin: auto;
}
input {
    font-size: 24px;
    font-weight: 100;
}
.super-top-menu {
    font-size: 12px;
}
.super-top-menu ul {
    list-style:none;
    margin:0;
    padding:0;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.super-top-menu ul li {
    margin-right: 20px;
}
.header-menu {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    width: 100%;
    height: 3%;
}
.header-menu ul {
    list-style:none;
    margin-top:20px;
    padding:0;
    line-height: 1;
    margin: 0;
}
.header-menu ul li {
    color: grey;
    font-size: 14px;
    text-align: center;
}
.header-menu-left {
    display: flex;
    flex-direction: row;
}
.header-menu-left li{
    margin-left: 30px;
}
.header-menu-right li{
    margin-left: 10px;
    margin-right: 30px;
    font-size: 30px;
}
.searchbar {
    margin-left: auto;
}
.searchbar input{
    width: 300px;
    height: 24px;
    position: static;
    border-radius: 30px;
    margin: 5px;
    left: 50%;
    border: 2px solid Turquoise;
    box-shadow: none;
    text-align: center;
    background-image: url("/img/search-icon.png");
    background-color: white;
    background-repeat: no-repeat;
    background-size: 20px;
    background-position: 270px center;
    float:right;
}
.searchbar input:focus {
    outline: none;
}
.searchbar form {
    width: 300px;
}
.color-hr {
    border-top: 1px solid Turquoise;
    width: 100%;
}
.panel-body ul {
    flex-direction: column;
}
.panel-body ul li{
    text-align: left;
    font-size: 16px;
    margin: 5px;
}
.checkbox-list {
    margin: 5px;
}
.col-md-4 {
    width: 25%;
}
.product-content a {
    font-size: 14px;
    font-weight: 300;
    color: black;
}
.product-content .price {
    margin: 5px;
}
.section {
    padding: 0;
    margin: 0;
}
.col-md-3 {
    width: 20%;
    margin: 1%;
}
.page-header {
    background-color: white;
    margin: 0;
}
.keyword-button {
    font-size: 14px;
    font-weight: 400;
    border-radius: 5px;
    border: none;
}
hr {
    margin: 0;
    padding: 0;
}
.company-info {
    margin: 10px;
    font-size: 12px;
    font-weight: 100;
}
.widget-title {
    padding: 10px;
}
.sort-option ul li{
    margin-bottom: 3px;
}
.admin-button {
    color: white;
    background-color: Turquoise;
    margin: 10px;
}
</style>
</head>

<body>
<div class="navbar-wrapper">
    <div class="this-header">
        <div class="super-top-menu">
            <ul>
                <c:if test="${member == null}">
                    <li><a href="/loginForDemo">(시연용)일반로그인</a></li>
                    <li><a href="/loginForDemoAsAdmin">(시연용)관리자로그인</a></li>
                    <li><a href="/login">로그인</a></li>
                    <li><a href="/signUp">회원가입</a></li>
                </c:if>
                <c:if test="${member != null}">
                    <li>${member.id}님 로그인 중 : </li>
                    <li><a href="/logout">로그아웃</a></li>
                </c:if>
                <li><a href="javascript:comingSoon();">고객센터</a></li>
            </ul>
        </div>
        <nav class="header-menu">
            <ul class="header-menu-left">
                <li style="font-size:24px; font-weight:700;"><a href="/">COLUMNSITE</a></li>

            </ul>
            <form class="searchbar" action="/"><input name="keyword"></form>
            <ul class="header-menu-right">
                <li style="padding-top: 11px;"><a href="javascript:goMyPage()">👤</a></li>
            </ul>
        </nav>
    </div>
</div>

</body>

<script>

    function comingSoon() {
        alert("업데이트 예정입니다.");
    }

    function goCart() {
        if(${member == null}) {
            alert("로그인이 필요합니다.");
            return false;
        }
        location.href="/cart?id=${member.id}";
    }

    function goLikeIt() {
        if(${member == null}) {
            alert("로그인이 필요합니다.");
            return false;
        }
        location.href="/likeList?id=${member.id}";
    }

    function goMyPage() {
        if(${member == null}) {
            alert("로그인이 필요합니다.");
            return false;
        }
        location.href="/myPage?id=${member.id}";
    }

</script>

