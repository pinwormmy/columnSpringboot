<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.demo.mapper.BoardMapper">

    <select id="showPostList" resultType="com.study.demo.board.BoardDTO">
        select post_num, title, content, writer, reg_date, views
            from board
            order by post_num desc
    </select>

    <select id="showSearchPostList" resultType="com.study.demo.board.BoardDTO">
        select post_num, title, content, writer, reg_date, views
        from board
        where
            <if test="searchType == title">title</if>
            <if test="searchType == content">content</if>
            <if test="searchType == titleAndContent">title and content</if>
            like '%'||#{keyword}||'%'
        order by post_num desc
    </select>

    <select id="readPost" resultType="com.study.demo.board.BoardDTO">
        select * from board
            where post_num=#{postNum}
    </select>

    <insert id="submitPost">
        insert into board
            values(POST_NUM_SEQ.nextval, #{title}, #{content}, #{writer}, sysdate, 0)
    </insert>

    <update id="submitModifyPost">
        update board
            set title=#{title}, content=#{content}, writer=#{writer}
            where post_num=#{postNum}
    </update>

    <delete id="deletePost">
        delete from board
        where post_num=#{postNum}
    </delete>

    <select id="countTotalPost" resultType="int">
        select count(*) from board
    </select>
</mapper>